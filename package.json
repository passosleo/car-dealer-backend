{
  "name": "car-dealer-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "start": "node ./dist/main.js",
    "start:prod": "npx prisma migrate deploy && npm run start",
    "start:test": "npx prisma migrate dev && npm run test:integration",
    "build": "tsup src --out-dir dist",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "test": "jest --passWithNoTests --coverage",
    "test:unit": "jest --config jest.unit.config.js --passWithNoTests --coverage",
    "test:integration": "jest --config jest.integration.config.js --passWithNoTests --coverage --runInBand",
    "ts:check": "npx tsc --noEmit",
    "docker:build": "docker build -t car-dealer-backend:latest .",
    "docker:compose": "docker-compose -f docker-compose.yml --env-file .env.docker up --build",
    "docker:compose:test": "docker-compose -f docker-compose-test.yml --env-file .env.docker.test up --build --abort-on-container-exit",
    "docker:compose:test:down": "docker-compose -f docker-compose-test.yml down --volumes"
  },
  "keywords": [],
  "author": "Leonardo Passos",
  "license": "ISC",
  "dependencies": {
    "@fastify/multipart": "^8.3.0",
    "@fastify/swagger": "^8.15.0",
    "@fastify/swagger-ui": "^4.1.0",
    "@prisma/client": "^5.18.0",
    "dotenv": "^16.4.5",
    "fastify": "^4.28.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.4.1",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-unused-imports": "^4.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "prisma": "^5.18.0",
    "ts-jest": "^29.2.4",
    "tsup": "^8.2.4",
    "tsx": "^4.17.0",
    "typescript": "^5.5.4"
  }
}
